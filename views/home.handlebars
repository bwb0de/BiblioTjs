  <table>
      <thead style="font-weight: bold;">
       <tr>
            <td style="width: 110px">ID</td>
            <td style="width: 400px">Título {{#if main_list}}<a href="/main_list">🞁</a><a href="/main_list/titulo_reverse">🞃</a>{{/if}}</td>
